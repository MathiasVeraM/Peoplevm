<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:People.Models"
             xmlns:vm="clr-namespace:People.ViewModels"
             x:Class="People.MainPage"
             BackgroundColor="{DynamicResource Light}">

    <ContentPage.BindingContext>
        <vm:PaginaPrincipalViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="5" RowSpacing="5" ColumnSpacing="5"
          RowDefinitions="Auto,Auto,Auto,Auto,*">

        <Entry x:Name="scordova_entry_name"
               Text="{Binding NewPersonName}"
               Placeholder="Enter name" />

        <Button Text="Add Person"
                Grid.Row="1"
                Command="{Binding AddPersonCommand}" />

        <Label x:Name="scordova_label_statusMessage"
               Text="{Binding StatusMessage}"
               TextColor="{StaticResource Primary}"
               Grid.Row="2" />

        <Button Text="Get All People"
                Grid.Row="3"
                Command="{Binding GetPeopleCommand}" />

        <CollectionView x:Name="scordova_collectionview_peopleList" Grid.Row="4"
                        ItemsSource="{Binding People}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Person">
                    <Grid ColumnDefinitions="*,2*,Auto">
                        <Label Text="{Binding Id}" TextColor="{StaticResource Primary}" />

                        <Label Grid.Column="1" Text="{Binding Name}" TextColor="{StaticResource Primary}" />

                        <Button Grid.Column="2" Text="Delete"
                                Command="{Binding BindingContext.DeletePersonCommand, Source={x:Reference scordova_collectionview_peopleList}}"
                                CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>

